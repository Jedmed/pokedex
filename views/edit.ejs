<h1>Edit Pokemon Data</h1>
<hr />
<div class="row">
  <div class='col-12'>
    <form action="/pokedex/<%= index %>?_method=PUT" method="POST">
      <div class="form-group row">
        <label class="col-3 col-form-label">Id:</label>
        <input type="text" class="form-control col-8" name="id" value="<%= pokemonId.id %>" />
      </div>
      <div class="form-group row">
        <label class="col-3 col-form-label">Name:</label>
        <input type="text" class="form-control col-8" name="name" value="<%= pokemonId.name %>" />
      </div>
      <div class="form-group row">
        <label class="col-3 col-form-label">Type: </label>
        <input type="text" class="form-control col-8" name="type" value="<%= pokemonId.type %>" />
      </div>
      Stats: <br />
      <div class="form-group row">
        <label class="col-3 offset-1 col-form-label text-right">HP: </label>
        <input type="text" class="form-control col-2" name="hp" value="<%= pokemonStats.hp %>" />
        <label class="col-3 col-form-label text-right">ATK: </label>
        <input type="text" class="form-control col-2" name="attack" value="<%= pokemonStats.attack %>" />
      </div>
      <div class="form-group row">
        <label class="col-3 offset-1 col-form-label text-right">DEF: </label>
        <input type="text" class="form-control col-2" name="defense" value="<%= pokemonStats.defense %>" />
        <label class="col-3 col-form-label text-right">SPATK: </label>
        <input type="text" class="form-control col-2" name="spattack" value="<%= pokemonStats.spattack %>" />
      </div>
      <div class="form-group row">
        <label class="col-3 offset-1 col-form-label text-right">SPDEF: </label>
        <input type="text" class="form-control col-2" name="spdefense" value="<%= pokemonStats.spdefense %>" />
        <label class="col-3 col-form-label text-right">SPD: </label>
        <input type="text" class="form-control col-2" name="speed" value="<%= pokemonStats.speed %>" />
      </div>
      <div class="form-group row">
        <div class="col-12">
          <input class="btn" type="submit" value="Submit Change" />
        </div>
      </div>
    </form>
  </div>
</div>
